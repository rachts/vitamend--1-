{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
